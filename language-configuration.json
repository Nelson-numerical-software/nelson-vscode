{
	"indentationRules": {
		"decreaseIndentPattern": "^\\s*\\b(end\\w*|catch|else|elseif|case)\\b",
		"increaseIndentPattern": "^\\s*\\b(function|if|else|elseif|case|otherwise|for|while|try|catch)\\b"
	},
	"comments": {
		"lineComment": "%",
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
	]
}